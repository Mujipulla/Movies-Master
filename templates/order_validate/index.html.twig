{% extends 'base.html.twig' %}

{% block title %}Validation de votre commande{% endblock %}

{% block body %}

<div class="">
    <h2  class="fontedit pt-5">Validation de votre commande</h2>

    <p class="font-f">Nous vous remercions pour votre commande n° <b>{{ order.ref }}</b> passée le {{ order.createdAt|date('d/m/Y à H:i') }}.</p>



    <div class="row">

        <div class="col-md-6">
            <h3 class="colorthird">Mon adresse de livraison:</h3>
            <p class="font-f">{{ order.delivery|replace({'[br]' : '<br>'})|raw }}</p>
            <hr>
            <h3 class="colorthird">Mon adresse de facturation:</h3>
            <p class="font-f">{{ order.delivery|replace({'[br]' : '<br>'})|raw }}</p>
        </div>
        <div class="col-md-6">
            <h3  class="font-f colorsecond"> <b>Commande : {{ order.ref }}</b></h3><br><br>

        </div>
    </div>


</div>
{% endblock %}
